              <input type="text" id="email" name="email" placeholder="Insira seu email" />
            </div>
  
            <div class="form-control">
              <label for="password">Senha</label>
              <input type="password" id="password" name="senha" placeholder="Insira sua senha"/>
            </div>
  
            <button class="button-entrar" type="submit">Entrar</button>
          </form>
          <button class="button-criar">
